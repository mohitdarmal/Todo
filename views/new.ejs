<% include partials/header %>

<div class='container'>
  <form action="/todos/<%= todo._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Enter Your Todo</label>
      <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" 
        value='<%= todo.title %>' name="title" autofocus>
    </div>

    <div class='row mt-3'>
      <div class='col-md-6'>
        <input type="time" class="form-control" id="appt" name="time" value='<%= todo.time %>'>
      </div>
      <div class='col-md-6'>
        <input type="text" class="form-control" name='am' placeholder='AM/PM' value='<%= todo.am %>'>
      </div>
    </div>
    <div class="form-group mt-3">
      <button type="submit" class="btn btn-primary"> Save Todo </button>
    </div>
  </form>
</div>


